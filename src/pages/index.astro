---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import getSortedPosts from "@utils/getSortedPosts";
import { SITE, SOCIALS } from "@config";

import CategoryTabs from "@components/CategoryTabs.astro";
import Pagination from "@components/Pagination.astro";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);

const totalPages = Math.ceil(recentPosts.length / SITE.postPerPage);
const paginatedPosts = recentPosts.slice(0, SITE.postPerPage);

const page = {
  data: paginatedPosts,
  start: 0,
  end: SITE.postPerPage - 1,
  size: SITE.postPerPage,
  total: recentPosts.length,
  currentPage: 1,
  lastPage: totalPages,
  url: {
    current: "/",
    prev: undefined,
    next: totalPages > 1 ? "/posts/2" : undefined,
  },
};
---

<Layout>
  <Header activeNav="posts" />
  <div class="mx-auto w-full max-w-5xl px-4">
    <p class="mt-4 hidden text-left text-sm italic text-skin-muted sm:block">
      A developer's take on mastery and exploration of<br />blockchain technology for fun and profit.
    </p>
  </div>
  <main id="main-content">
    <CategoryTabs activeCategory="All" />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured">
            <h1>Featured</h1>
            <ul>
              {featuredPosts.map(({ data, slug }) => (
                <Card
                  href={`/posts/${slug}/`}
                  frontmatter={data}
                />
              ))}
            </ul>
          </section>
          {paginatedPosts.length > 0 && <div class="pb-6"></div>}
        </>
      )
    }

    {
      paginatedPosts.length > 0 && (
        <section id="recent-posts">
          <h1 class="sr-only">Recent Posts</h1>
          <ul>
            {paginatedPosts.map(
              ({ data, slug }, index) =>
                index < SITE.postPerPage && (
                  <Card
                    href={`/posts/${slug}/`}
                    frontmatter={data}
                  />
                )
            )}
          </ul>
        </section>
      )
    }
  </main>

  <Pagination {page} />
  <Footer />
</Layout>

